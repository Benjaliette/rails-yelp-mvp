<h2><%= @restaurant.name %></h2>

<ul class="list-group list-group-horizontal mb-5">
  <li class="list-group-item m-3">Address: <%= @restaurant.address %></li>
  <li class="list-group-item m-3">Phone: <%= @restaurant.phone_number %></li>
  <li class="list-group-item m-3">Type: <%= @restaurant.category %></li>
</ul>


<h3>Reviews:</h3>

<ul class="list-group list-group-flush mb-5">
  <% @reviews.each do |review| %>
    <li class="list-group-item mb-1">
      <div class="rate"><%= review.rating %>/5</div>
      <div class="rate-content"><%= review.content %></div>
    </li>
  <% end %>
</ul>

<h3>Add a review:</h3>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.button :submit %>
<% end %>
